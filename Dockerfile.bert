FROM python:3.12-slim

WORKDIR /app

# Install only the necessary packages for BERT
RUN pip install --no-cache-dir \
    flask==3.0.0 \
    flask-cors==4.0.0 \
    transformers==4.36.2 \
    torch==2.1.2 \
    numpy==1.26.2 \
    --index-url https://download.pytorch.org/whl/cpu

# Copy only the BERT API file
COPY bert_api.py .

# Expose port
EXPOSE 5001

# Run the BERT API
CMD ["python", "bert_api.py"]